{
  "name": "mitaka",
  "version": "0.85.1",
  "description": "A browser extension for searching IP, domain, URL, hash, etc. via the context menu.",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --ext .ts src test",
    "lint:pre-commit": "eslint --ext .ts src --fix --quiet",
    "build": "cross-env NODE_ENV=production webpack",
    "build:dev": "cross-env NODE_ENV=development webpack",
    "build:zip": "npm run build && ts-node scripts/build-zip.ts",
    "watch": "npm run build -- --watch",
    "watch:dev": "cross-env HMR=true npm run build:dev -- --watch",
    "test": "mocha -r ts-node/register -r tsconfig-paths/register",
    "coverage": "nyc npm run test",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:pre-commit"
    ]
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "html",
      "text",
      "lcov"
    ],
    "sourceMap": true,
    "all": true
  },
  "author": "ninoseki",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ninoseki/mitaka.git"
  },
  "dependencies": {
    "@github/mini-throttle": "^2.1.0",
    "axios": "^0.21.1",
    "bulma": "^0.9.2",
    "ioc-extractor": "2.7.5",
    "js-base64": "^3.6.0",
    "js-sha256": "^0.9.0",
    "mustache": "^4.2.0",
    "qs": "^6.10.1",
    "snakecase-keys": "^4.0.2",
    "url": "^0.11.0"
  },
  "devDependencies": {
    "@types/archiver": "5.1.0",
    "@types/chai": "4.2.17",
    "@types/chai-as-promised": "7.1.3",
    "@types/js-base64": "3.0.0",
    "@types/jsdom": "16.2.10",
    "@types/mocha": "8.2.2",
    "@types/moxios": "0.4.11",
    "@types/mustache": "4.1.1",
    "@types/node": "15.0.1",
    "@types/qs": "6.9.6",
    "@types/sinon": "10.0.0",
    "@types/window-or-global": "1.0.0",
    "@typescript-eslint/eslint-plugin": "4.22.0",
    "@typescript-eslint/parser": "4.22.0",
    "archiver": "5.3.0",
    "chai": "4.3.4",
    "chai-as-promised": "7.1.1",
    "clean-webpack-plugin": "3.0.0",
    "copy-webpack-plugin": "8.1.1",
    "coveralls": "3.1.0",
    "cross-env": "7.0.3",
    "css-loader": "5.2.4",
    "eslint": "7.25.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "husky": "6.0.0",
    "ignore-styles": "5.0.1",
    "jsdom": "16.5.3",
    "lint-staged": "10.5.4",
    "mini-css-extract-plugin": "1.5.1",
    "mocha": "8.3.2",
    "moxios": "0.4.0",
    "nyc": "15.1.0",
    "pinst": "2.1.6",
    "prettier": "2.2.1",
    "sass": "1.32.12",
    "sass-loader": "11.0.1",
    "sinon": "10.0.0",
    "style-loader": "2.0.0",
    "ts-loader": "9.1.1",
    "ts-node": "9.1.1",
    "tsconfig-paths": "3.9.0",
    "typescript": "4.2.4",
    "webextension-polyfill-ts": "0.25.0",
    "webpack": "5.36.1",
    "webpack-cli": "4.6.0",
    "window-or-global": "1.0.1"
  }
}
