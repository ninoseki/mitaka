{
  "name": "mitaka",
  "version": "0.77.0",
  "description": "A browser extension for searching IP, domain, URL, hash, etc. via the context menu.",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --ext .ts src test",
    "lint:fix": "npm run lint -- --fix",
    "lint:pre-commit": "eslint --ext .ts src --fix --quiet",
    "prettier": "prettier \"src/**/*.ts\" \"test/**/*.ts\"",
    "prettier:write": "npm run prettier -- --write",
    "build": "cross-env NODE_ENV=production webpack",
    "build:dev": "cross-env NODE_ENV=development webpack",
    "build:zip": "npm run build && ts-node scripts/build-zip.ts",
    "watch": "npm run build -- --watch",
    "watch:dev": "cross-env HMR=true npm run build:dev -- --watch",
    "test": "nyc mocha",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:pre-commit",
      "npm run prettier:write"
    ]
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "html",
      "text"
    ],
    "sourceMap": true,
    "all": true
  },
  "author": "ninoseki",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ninoseki/mitaka.git"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "ioc-extractor": "^2.3.8",
    "js-base64": "^3.4.4",
    "js-sha256": "^0.9.0",
    "mustache": "^4.0.1",
    "qs": "^6.9.4",
    "snakecase-keys": "^3.2.0",
    "throttle-debounce": "^2.2.1",
    "url": "^0.11.0"
  },
  "devDependencies": {
    "@types/archiver": "^3.1.0",
    "@types/chai": "^4.2.12",
    "@types/chai-as-promised": "^7.1.3",
    "@types/js-base64": "^3.0.0",
    "@types/jsdom": "^16.2.3",
    "@types/mocha": "^8.0.1",
    "@types/moxios": "^0.4.9",
    "@types/mustache": "^4.0.1",
    "@types/node": "^14.0.27",
    "@types/qs": "^6.9.4",
    "@types/sinon": "^9.0.4",
    "@types/throttle-debounce": "^2.1.0",
    "@types/window-or-global": "1.0.2",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "archiver": "^5.0.0",
    "bulma": "^0.9.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.0.3",
    "coveralls": "^3.1.0",
    "cross-env": "^7.0.2",
    "css-loader": "^4.2.0",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "husky": "^4.2.5",
    "ignore-styles": "^5.0.1",
    "jsdom": "^16.3.0",
    "lint-staged": "^10.2.11",
    "mini-css-extract-plugin": "^0.9.0",
    "mocha": "^8.1.1",
    "moxios": "^0.4.0",
    "node-sass": "^4.14.1",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "sass-loader": "^9.0.2",
    "sinon": "^9.0.2",
    "style-loader": "^1.2.1",
    "ts-loader": "^8.0.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7",
    "webextension-polyfill-ts": "^0.19.0",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-extension-reloader": "^1.1.4",
    "window-or-global": "^1.0.1"
  }
}
