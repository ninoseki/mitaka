{
  "name": "mitaka",
  "version": "2.4.0",
  "type": "module",
  "description": "A browser extension for searching IP, domain, URL, hash, etc. via the context menu.",
  "scripts": {
    "build:firefox": "wxt build -b firefox --mv3",
    "build": "wxt build",
    "compile": "vue-tsc --noEmit",
    "dev:firefox": "wxt -b firefox",
    "dev": "wxt",
    "format": "prettier --write src/ tests/",
    "lint": "eslint src tests --fix",
    "postinstall": "wxt prepare",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "zip:firefox": "wxt zip -b firefox --mv3",
    "zip": "wxt zip"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "npm run format"
    ]
  },
  "author": "ninoseki",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ninoseki/mitaka.git"
  },
  "dependencies": {
    "@github/mini-throttle": "^2.1.1",
    "@webext-core/messaging": "^2.2.0",
    "bulma": "^1.0.3",
    "ioc-extractor": "^8.1.2",
    "js-base64": "^3.7.7",
    "js-sha256": "^0.11.0",
    "just-truncate": "^2.2.0",
    "neverthrow": "8.1.1",
    "valibot": "^0.42.1",
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@ninoseki/eslint-plugin-neverthrow": "^0.0.1",
    "@types/chrome": "^0.0.304",
    "@types/node": "^22.9.2",
    "@typescript-eslint/eslint-plugin": "8.24.1",
    "@typescript-eslint/parser": "8.24.1",
    "@vitest/coverage-v8": "^3.0.6",
    "@vitest/eslint-plugin": "^1.1.31",
    "@vue/eslint-config-typescript": "^14.4.0",
    "@wxt-dev/module-vue": "^1.0.2",
    "axios": "^1.7.9",
    "coveralls": "3.1.1",
    "eslint": "^9.20.1",
    "eslint-plugin-regexp": "^2.7.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-vue": "^9.32.0",
    "husky": "9.1.7",
    "lint-staged": "15.4.3",
    "prettier": "3.5.1",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1",
    "vitest": "^3.0.6",
    "wxt": "^0.19.27"
  }
}
