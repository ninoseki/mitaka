{
  "name": "mitaka",
  "version": "0.78.1",
  "description": "A browser extension for searching IP, domain, URL, hash, etc. via the context menu.",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --ext .ts src test",
    "lint:fix": "npm run lint -- --fix",
    "lint:pre-commit": "eslint --ext .ts src --fix --quiet",
    "prettier": "prettier \"src/**/*.ts\" \"test/**/*.ts\"",
    "prettier:write": "npm run prettier -- --write",
    "build": "cross-env NODE_ENV=production webpack",
    "build:dev": "cross-env NODE_ENV=development webpack",
    "build:zip": "npm run build && ts-node scripts/build-zip.ts",
    "watch": "npm run build -- --watch",
    "watch:dev": "cross-env HMR=true npm run build:dev -- --watch",
    "test": "nyc mocha",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:pre-commit",
      "npm run prettier:write"
    ]
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "html",
      "text"
    ],
    "sourceMap": true,
    "all": true
  },
  "author": "ninoseki",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ninoseki/mitaka.git"
  },
  "dependencies": {
    "@github/mini-throttle": "^2.0.1",
    "axios": "^0.20.0",
    "ioc-extractor": "^2.5.1",
    "js-base64": "^3.5.2",
    "js-sha256": "^0.9.0",
    "mustache": "^4.0.1",
    "qs": "^6.9.4",
    "snakecase-keys": "^3.2.0",
    "url": "^0.11.0"
  },
  "devDependencies": {
    "@types/archiver": "3.1.1",
    "@types/chai": "4.2.12",
    "@types/chai-as-promised": "7.1.3",
    "@types/js-base64": "3.0.0",
    "@types/jsdom": "16.2.4",
    "@types/mocha": "8.0.3",
    "@types/moxios": "0.4.9",
    "@types/mustache": "4.0.1",
    "@types/node": "14.11.2",
    "@types/qs": "6.9.5",
    "@types/sinon": "9.0.7",
    "@types/window-or-global": "1.0.3",
    "@typescript-eslint/eslint-plugin": "4.3.0",
    "@typescript-eslint/parser": "4.3.0",
    "archiver": "5.0.2",
    "bulma": "0.9.1",
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "clean-webpack-plugin": "3.0.0",
    "copy-webpack-plugin": "6.1.1",
    "coveralls": "3.1.0",
    "cross-env": "7.0.2",
    "css-loader": "4.3.0",
    "eslint": "7.10.0",
    "eslint-config-prettier": "6.12.0",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-simple-import-sort": "5.0.3",
    "extract-text-webpack-plugin": "4.0.0-beta.0",
    "husky": "4.3.0",
    "ignore-styles": "5.0.1",
    "jsdom": "16.4.0",
    "lint-staged": "10.4.0",
    "mini-css-extract-plugin": "0.11.2",
    "mocha": "8.1.3",
    "moxios": "0.4.0",
    "node-sass": "4.14.1",
    "nyc": "15.1.0",
    "prettier": "2.1.2",
    "sass-loader": "10.0.2",
    "sinon": "9.1.0",
    "style-loader": "1.2.1",
    "ts-loader": "8.0.4",
    "ts-node": "9.0.0",
    "typescript": "4.0.3",
    "webextension-polyfill-ts": "0.20.0",
    "webpack": "4.44.2",
    "webpack-cli": "3.3.12",
    "webpack-extension-reloader": "1.1.4",
    "window-or-global": "1.0.1"
  }
}
