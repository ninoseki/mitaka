{
  "name": "mitaka",
  "version": "0.90.3",
  "description": "A browser extension for searching IP, domain, URL, hash, etc. via the context menu.",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --ext .ts src test",
    "lint:pre-commit": "eslint --ext .ts src --fix --quiet",
    "prebuild": "cross-env NODE_ENV=production webpack",
    "build": "npx web-ext build -s dist/ --overwrite-dest",
    "watch": "npm run prebuild -- --watch",
    "test": "mocha -r ts-node/register -r tsconfig-paths/register",
    "coverage": "nyc npm run test",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:pre-commit"
    ]
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "html",
      "text",
      "lcov"
    ],
    "sourceMap": true,
    "all": true
  },
  "author": "ninoseki",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ninoseki/mitaka.git"
  },
  "dependencies": {
    "@github/mini-throttle": "^2.1.0",
    "axios": "^0.26.1",
    "bulma": "^0.9.3",
    "ioc-extractor": "4.0.6",
    "js-base64": "^3.7.2",
    "js-sha256": "^0.9.0",
    "mustache": "^4.2.0",
    "qs": "^6.10.3",
    "snakecase-keys": "^5.4.0",
    "url": "^0.11.0"
  },
  "devDependencies": {
    "@types/chai": "4.3.1",
    "@types/chai-as-promised": "7.1.5",
    "@types/js-base64": "3.3.1",
    "@types/jsdom": "16.2.14",
    "@types/mocha": "9.1.0",
    "@types/moxios": "0.4.15",
    "@types/mustache": "4.1.2",
    "@types/node": "17.0.23",
    "@types/qs": "6.9.7",
    "@types/sinon": "10.0.11",
    "@types/window-or-global": "1.0.0",
    "@typescript-eslint/eslint-plugin": "5.18.0",
    "@typescript-eslint/parser": "5.18.0",
    "chai": "4.3.6",
    "chai-as-promised": "7.1.1",
    "clean-webpack-plugin": "4.0.0",
    "copy-webpack-plugin": "10.2.4",
    "coveralls": "3.1.1",
    "cross-env": "7.0.3",
    "css-loader": "6.7.1",
    "eslint": "8.13.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "husky": "7.0.4",
    "ignore-styles": "5.0.1",
    "jsdom": "19.0.0",
    "lint-staged": "12.3.7",
    "mini-css-extract-plugin": "2.6.0",
    "mocha": "9.2.2",
    "moxios": "0.4.0",
    "nyc": "15.1.0",
    "pinst": "2.1.6",
    "prettier": "2.6.2",
    "sass": "1.50.0",
    "sass-loader": "12.6.0",
    "sinon": "13.0.1",
    "style-loader": "3.3.1",
    "ts-loader": "9.2.8",
    "ts-node": "10.7.0",
    "tsconfig-paths": "3.14.1",
    "typescript": "4.6.3",
    "web-ext": "6.8.0",
    "webextension-polyfill-ts": "0.22.0",
    "webpack": "5.72.0",
    "webpack-cli": "4.9.2",
    "window-or-global": "1.0.1"
  }
}
