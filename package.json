{
  "name": "mitaka",
  "displayName": "Mitaka",
  "version": "2.1.0",
  "type": "module",
  "description": "A browser extension for searching IP, domain, URL, hash, etc. via the context menu.",
  "scripts": {
    "lint": "eslint --ext .js,.vue,.ts --ignore-path .gitignore --fix src --fix tests",
    "format": "prettier --write src/ tests/",
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo build --zip",
    "prepare": "husky install",
    "test": "jest tests/ --collect-coverage"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "npm run format"
    ]
  },
  "author": "ninoseki",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ninoseki/mitaka.git"
  },
  "dependencies": {
    "@github/mini-throttle": "^2.1.1",
    "bulma": "^1.0.0",
    "ioc-extractor": "^8.0.3",
    "js-base64": "^3.7.7",
    "js-sha256": "^0.11.0",
    "just-truncate": "^2.2.0",
    "neverthrow": "6.1.0",
    "vue": "^3.4.23",
    "zod": "^3.22.5"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.2.1",
    "@jest/globals": "^29.7.0",
    "@jest/types": "^29.6.3",
    "@types/chrome": "^0.0.266",
    "@types/jest": "^29.5.12",
    "@types/js-base64": "3.3.1",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "7.7.0",
    "@typescript-eslint/parser": "7.7.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "axios": "^1.6.8",
    "coveralls": "3.1.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-neverthrow": "^1.1.4",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-vue": "^9.25.0",
    "husky": "9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-webextension-mock": "^3.8.9",
    "lint-staged": "15.2.2",
    "plasmo": "^0.85.2",
    "prettier": "3.2.5",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.2",
    "typescript": "5.4.5"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*",
      "http://*/*"
    ],
    "permissions": [
      "contextMenus",
      "storage",
      "notifications"
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self';",
      "sandbox": "sandbox allow-scripts allow-forms allow-popups allow-modals; script-src 'self' 'unsafe-inline' 'unsafe-eval'; child-src 'self';"
    },
    "browser_specific_settings": {
      "gecko": {
        "id": "{9efc0280-b125-400e-b53d-2d09d7effab4}"
      }
    }
  }
}
