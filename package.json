{
  "name": "mitaka",
  "version": "0.87.0",
  "description": "A browser extension for searching IP, domain, URL, hash, etc. via the context menu.",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --ext .ts src test",
    "lint:pre-commit": "eslint --ext .ts src --fix --quiet",
    "prebuild": "cross-env NODE_ENV=production webpack",
    "build": "npx web-ext build -s dist/ --overwrite-dest",
    "watch": "npm run prebuild -- --watch",
    "test": "mocha -r ts-node/register -r tsconfig-paths/register",
    "coverage": "nyc npm run test",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:pre-commit"
    ]
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "html",
      "text",
      "lcov"
    ],
    "sourceMap": true,
    "all": true
  },
  "author": "ninoseki",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ninoseki/mitaka.git"
  },
  "dependencies": {
    "@github/mini-throttle": "^2.1.0",
    "axios": "^0.21.1",
    "bulma": "^0.9.3",
    "ioc-extractor": "3.0.0",
    "js-base64": "^3.6.1",
    "js-sha256": "^0.9.0",
    "mustache": "^4.2.0",
    "qs": "^6.10.1",
    "snakecase-keys": "^4.0.2",
    "url": "^0.11.0"
  },
  "devDependencies": {
    "@types/chai": "4.2.21",
    "@types/chai-as-promised": "7.1.4",
    "@types/js-base64": "3.3.1",
    "@types/jsdom": "16.2.13",
    "@types/mocha": "9.0.0",
    "@types/moxios": "0.4.12",
    "@types/mustache": "4.1.2",
    "@types/node": "16.4.10",
    "@types/qs": "6.9.7",
    "@types/sinon": "10.0.2",
    "@types/window-or-global": "1.0.0",
    "@typescript-eslint/eslint-plugin": "4.28.1",
    "@typescript-eslint/parser": "4.29.0",
    "chai": "4.3.4",
    "chai-as-promised": "7.1.1",
    "clean-webpack-plugin": "3.0.0",
    "copy-webpack-plugin": "9.0.1",
    "coveralls": "3.1.1",
    "cross-env": "7.0.3",
    "css-loader": "6.2.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "3.4.1",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "husky": "7.0.2",
    "ignore-styles": "5.0.1",
    "jsdom": "16.7.0",
    "lint-staged": "11.1.2",
    "mini-css-extract-plugin": "2.2.2",
    "mocha": "9.1.1",
    "moxios": "0.4.0",
    "nyc": "15.1.0",
    "pinst": "2.1.6",
    "prettier": "2.3.2",
    "sass": "1.37.2",
    "sass-loader": "12.1.0",
    "sinon": "11.1.2",
    "style-loader": "3.2.1",
    "ts-loader": "9.2.5",
    "ts-node": "10.1.0",
    "tsconfig-paths": "3.10.1",
    "typescript": "4.3.5",
    "web-ext": "6.2.0",
    "webextension-polyfill-ts": "0.22.0",
    "webpack": "5.48.0",
    "webpack-cli": "4.7.2",
    "window-or-global": "1.0.1"
  }
}
