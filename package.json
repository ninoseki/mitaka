{
  "name": "mitaka",
  "version": "0.2.0",
  "description": "A Chrome Extension makes search engines friendly with urlscan.io Edit",
  "main": "index.js",
  "scripts": {
    "build": "./node_modules/.bin/webpack",
    "watch": "./node_modules/.bin/webpack -w",
    "test": "./node_modules/.bin/mocha -r ts-node/register src/**/*.spec.ts",
    "cover": "nyc npm t"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html",
      "text"
    ],
    "sourceMap": true,
    "all": true
  },
  "author": "ninoseki",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ninoseki/mitaka.git"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "crypto-js": "^3.1.9-1",
    "url": "^0.11.0",
    "validator": "^10.2.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/chrome": "^0.0.65",
    "@types/crypto-js": "^3.1.39",
    "@types/mocha": "^5.2.0",
    "@types/node": "^10.1.0",
    "@types/validator": "^9.4.1",
    "chai": "^4.1.2",
    "mocha": "^5.1.1",
    "nyc": "^11.8.0",
    "ts-loader": "^4.3.0",
    "ts-node": "^6.0.3",
    "typescript": "^2.8.3",
    "webpack-cli": "^2.1.3",
    "webpack": "^4.8.3"
  }
}
