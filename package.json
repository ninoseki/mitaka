{
  "name": "mitaka",
  "displayName": "Mitaka",
  "version": "1.3.0",
  "description": "A browser extension for searching IP, domain, URL, hash, etc. via the context menu.",
  "scripts": {
    "lint": "eslint --ext .js,.vue,.ts --ignore-path .gitignore --fix src --fix tests",
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo build --zip",
    "prepare": "husky install",
    "test": "jest tests/ --collect-coverage"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint"
    ]
  },
  "author": "ninoseki",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ninoseki/mitaka.git"
  },
  "dependencies": {
    "@github/mini-throttle": "^2.1.0",
    "bulma": "^0.9.4",
    "ioc-extractor": "5.0.3",
    "js-base64": "^3.7.5",
    "js-sha256": "^0.9.0",
    "vue": "^3.3.4",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@jest/types": "^29.5.0",
    "@plasmohq/prettier-plugin-sort-imports": "^3.6.4",
    "@types/chrome": "^0.0.238",
    "@types/jest": "^29.5.2",
    "@types/js-base64": "3.3.1",
    "@types/node": "^20.3.1",
    "@typescript-eslint/eslint-plugin": "5.60.0",
    "@typescript-eslint/parser": "5.60.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "coveralls": "3.1.1",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-vue": "^9.15.1",
    "husky": "8.0.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-webextension-mock": "^3.8.9",
    "lint-staged": "13.2.2",
    "plasmo": "^0.76.3",
    "prettier": "2.8.8",
    "ts-jest": "^29.1.0",
    "typescript": "5.1.6"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*",
      "http://*/*"
    ],
    "permissions": [
      "contextMenus",
      "storage",
      "notifications"
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self';",
      "sandbox": "sandbox allow-scripts allow-forms allow-popups allow-modals; script-src 'self' 'unsafe-inline' 'unsafe-eval'; child-src 'self';"
    }
  }
}
